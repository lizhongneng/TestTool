    <flyme.support.v7.widget.RecyclerFastScrollLetter
        android:id="@+id/fastscroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/appinfo_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/appinfo_list"
        flyme:mcLetterBarPaddingBottom="100dp"
        flyme:mcLetterBarPaddingTop="100dp"
